<%= form_with model: @assignment, local: true do |form | %>
  <% if @assignment != nil %>
    <% if @assignment.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being completed:
        </h2>
        <ul>
          <% @assignment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

  <p>
    <%= form.label :bug_id %><br>
    <%= form.select :bug_id, Bug.all.collect { |b| [ b.title, b.id ] }, prompt: true %>
  </p>
  <p>
    <%= form.label :dev_id %><br>
    <%= form.select :dev_id, Dev.all.collect { |d| [ d.devname, d.id ] }, prompt: true %>
  </p>
  <p>
    <%= form.submit %>
  </p>

<% end %>

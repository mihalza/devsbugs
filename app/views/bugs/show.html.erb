<p>
  <strong>Bug:</strong>
  <%= @bug.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @bug.text %>
</p>
<strong>Developers working on this bug:<strong><br>
    <table>
      <tr>
        <% @assignments = Assignment.where(bug: @bug) %>
        <% @assignments.each do |assignment| %>
          <%if assignment.dev %>
            <td><%= assignment.dev.devname %></td>
            <td><%= link_to 'View Developer', dev_path(assignment.dev) %></td>
            <td><%= link_to 'Unassign', assignment_path(assignment),
              method: :delete,
              data: {confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
    </table>
<%= link_to 'Edit', edit_bug_path(@bug) %> |
<%= link_to 'To bugs list', bugs_path %> |
<%= link_to 'To assignments list', assignments_path %>
